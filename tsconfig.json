{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "moduleResolution": "node",
    "declarationDir": "./**/*.d.ts",
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*", "scripts", "src/icons"]
}
